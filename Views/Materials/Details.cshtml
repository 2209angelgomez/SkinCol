@model SkinCol.Models.Material

@{
    ViewData["Title"] = "Detalles material";
}
<main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">
       
        <div class="row wow fadeIn">
            <div class="col-md-12 md-4">
                <div class="card">
                    <div class="card-body">
                        <h4>Material @Html.DisplayFor(m => m.Nombre)</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaterialID" class="btn btn-outline-primary btn-block mt-5"><i class="fas fa-pen-square"></i> Editar</a>
            <a asp-action="Index" class="btn btn-outline-danger btn-block mb-5"><i class="fa fa-arrow-alt-circle-left"></i> Regresar</a>
        </div>

    </div>
</main>