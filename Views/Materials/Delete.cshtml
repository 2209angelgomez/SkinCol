@model SkinCol.Models.Material

@{
    ViewData["Title"] = "Eliminar material";
}

<main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">
        <!-- Heading -->
        <div class="card mb-4 wow fadeIn">
            <!--Card content-->
            <div class="card-body d-sm-flex justify-content-between">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <span>¿Esta seguro que desea eliminar este item?</span>
                </h4>
            </div>
        </div>
        <!-- Heading -->
        <!--Grid row-->
        <div class="row wow fadeIn">

            <!--Grid column-->
            <div class="col-md-12 mb-4">

                <!--Card-->
                <div class="card">

                    <!--Card content-->
                    <div class="card-body">
                        <div>
                            <h4>Material</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Nombre)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Descripcion)
                                </dd>
                            </dl>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="MaterialID" />
                                <div class="btn-group btn-block" role="group" aria-label="Basic example">
                                    <button type="submit" class="btn btn-danger btn-block"><i class="fas fa-minus-circle"></i> Eliminar</button>
                                    <a asp-action="Index" class="btn btn-primary btn-block"><i class="fa fa-arrow-alt-circle-left"></i> Cancelar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!--Card content-->
                </div>
                <!--/.Card-->
            </div>
            <!--Grid column-->
        </div>
        <!--Grid row-->
    </div>
</main>

