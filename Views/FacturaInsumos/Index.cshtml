@model IEnumerable<SkinCol.Models.FacturaInsumos>

@{
    ViewData["Title"] = "Facturas Insumos";
}

    <main class="pt-5 mx-lg-5">
        <div class="container-fluid mt-5">
            <!-- Heading -->
            <div class="card mb-4 wow fadeIn">
                <!--Card content-->
                <div class="card-body d-sm-flex justify-content-between">
                    <h4 class="mb-2 mb-sm-0 pt-1">
                        <span>Facturas Insumos</span>
                    </h4>
                    <div class="row justify-content-end">
                        <div class="col-md-12 ">
                            <a asp-action="Create" class="border border-success rounded waves-effect text-success"><i class="far fa-plus-square"></i> Agregar</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Heading -->

            <!--Grid row-->
            <div class="row wow fadeIn">

                <!--Grid column-->
                <div class="col-md-12 mb-4">

                    <!--Card-->
                    <div class="card">

                        <!--Card content-->
                        <div class="card-body">

                            <!-- Table  -->
                            <table class="table table-striped">
                                <thead class="blue-grey lighten-4">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Proveedor)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Material)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Cantidad)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Costo)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Material.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cantidad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Costo)
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.FacturaInsumosID">Detalles</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- Table  -->
                        </div>
                        <!--Card content-->
                    </div>
                    <!--/.Card-->
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
        </div>
    </main> 


